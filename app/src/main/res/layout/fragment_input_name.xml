<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_game"
    tools:context=".ui.onboarding.inputname.InputNameFragment">

    <androidx.constraintlayout.widget.Guideline
        android:orientation="horizontal"
        android:id="@+id/guideline"
        app:layout_constraintGuide_percent="0.5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        android:layout_marginBottom="@dimen/_8sdp"
        app:layout_constraintBottom_toTopOf="@+id/et_input_name"
        android:text="@string/text_title_input_name"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/_24ssp"
        android:textAllCaps="true"
        android:fontFamily="@font/pixelated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_marginTop="@dimen/_8sdp"
        android:padding="@dimen/_8sdp"
        android:background="@drawable/bg_edit_text_rounded"
        android:id="@+id/et_input_name"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        android:hint="@string/text_hint_input_name"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</androidx.constraintlayout.widget.ConstraintLayout>